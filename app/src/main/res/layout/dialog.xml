<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:enabled="false"
        android:id="@+id/edtCodeDl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"></EditText>

    <EditText
        android:id="@+id/edtNameDl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"></EditText>

    <EditText
        android:id="@+id/edtPopulationDl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Population"></EditText>

    <Button
        android:id="@+id/btnOkDl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"></Button>

</LinearLayout>